@model IEnumerable<SalesWebMvc.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-outline-secondary" asp-action="Create">Add Department</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a class="btn btn-info" asp-controller="Departments" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-secondary" asp-controller="Departments" asp-action="Details" asp-route-id="@item.Id">Detais</a>
                <a class="btn btn-danger" asp-controller="Departments" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
